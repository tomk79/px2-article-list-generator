	<ul>
		<li class="cont-page-list__pager-first">{% if pager.first %}<a href="{{ href_pager( pager.first ) }}">&lt;&lt;</a>{% else %}<span>&lt;&lt;</span>{% endif %}</li>
		<li class="cont-page-list__pager-prev">{% if pager.prev %}<a href="{{ href_pager( pager.prev ) }}">&lt;</a>{% else %}<span>&lt;</span>{% endif %}</li>
{% for i in pager.index_start .. pager.index_end %}
	{% if i == pager.current %}
		<li><span class="cont-page-list__pager-current">{{ i }}</span></li>
	{% else %}
		<li><a href="{{ href_pager( i ) }}">{{ i }}</a></li>
	{% endif %}
{% endfor %}
		<li class="cont-page-list__pager-next">{% if pager.next %}<a href="{{ href_pager( pager.next ) }}">&gt;</a>{% else %}<span>&gt;</span>{% endif %}</li>
		<li class="cont-page-list__pager-last">{% if pager.last %}<a href="{{ href_pager( pager.last ) }}">&gt;&gt;</a>{% else %}<span>&gt;&gt;</span>{% endif %}</li>
	</ul>
</div><!-- /.pager -->

{% endif %}


</div>
